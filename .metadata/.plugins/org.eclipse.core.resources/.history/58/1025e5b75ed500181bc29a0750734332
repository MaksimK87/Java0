import java.util.Scanner;

/*) Ќаписать программу, котора€ переворачивает (реверсирует) 
 * семизначное число N (к примеру, число 1234567 реверсируетс€ 
 * в число 7654321).*/
public class Exercise6 {

	public static void main(String[] args) {
		int chislo,revChislo=0, counter, delitel = 1, i = 0,j=0;
		int memory[] = new int[7];
		Scanner in = new Scanner(System.in);
		System.out.println("¬ведите семизначное число:");
		chislo = in.nextInt();
		while (chislo != 0) {
			if (delitel == 1000000) {
				memory[i] = (chislo / delitel);
				break;
			}
			memory[i] = (chislo / delitel) % 10;
			i++;
			delitel = delitel * 10;
		}
		while (delitel != 0) {

			revChislo = revChislo+memory[j] * delitel;
			delitel=delitel/10;
			j++;
				

		}
		System.out.println("ќбратное число: "+revChislo);

	}

}
