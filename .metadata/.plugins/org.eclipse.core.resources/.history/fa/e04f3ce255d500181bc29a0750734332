import java.util.Scanner;

/*Разработайте программу, которая проверяет, что цифры четырёхзначного числа N 
 * образуют возрастающую (убывающую) последовательность 
 * (к примеру, число 1357 удовлетворяет условию, т.к. его цифры соответствуют 
 * следующему неравенству: 1 < 3 < 5 < 7, т.е. идут в порядке возрастания).*/

public class Exercise4 {

	public static void main(String[] args) {
		int chislo, a, b, c, d;
		Scanner in = new Scanner(System.in);
		System.out.println("Введите четырехзначное число:");
		chislo = in.nextInt();
		d = chislo % 10;
		c = ((chislo - d) / 10) % 10;
		b = (chislo / 100) % 10;
		a = chislo / 1000;
		if (a < b && b < c && c < d) {
			System.out.println("Цифры введенного числа образуют " + "возрастающую последовательность");

		} else {
			if (a == b && b == c && c == d) {
				System.out.println("Цифры числа равны");
			} else {
				if (a > b && b > c && c > d)
					System.out.println("Цифры числа образуют убывающую последовательность");
			}

		}
		System.out.println(d+b+c+d);
	}

}
